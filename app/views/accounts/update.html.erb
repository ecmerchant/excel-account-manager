<h1>アカウント情報の更新</h1>
<br>
<%= link_to 'アカウントの登録', {action:"regist"} %>
&nbsp;
<%= link_to 'トップページ', {action:"manage"} %>
<br>
<%= form_tag(controller: "accounts", action: "update") do %>
  <p>アカウント名：</p><%= text_field_tag("account") %>
  <%= submit_tag("検索") %>
<% end %>
<br>
<p>登録情報の更新</p>
<%= form_tag(controller: "accounts", action: "update") do %>
<table>
  <tr>
    <th>登録情報</th>
    <th>現在</th>
    <th>変更後</th>
  </tr>
    <th>アカウント</th>
    <td><%= @user %></td>
    <td><%= text_field_tag("new_account",@user) %></td>
  <tr>
    <th>パスワード</th>
    <td><%= @pass %></td>
    <td><%= text_field_tag("new_pass",@pass) %></td>
  </tr>
  <tr>
    <th>有効性</th>
    <td><%= @avail %></td>
    <td><%= select_tag("new_avail",options_for_select(['true','false'])) %></td>
  </tr>
</table>
<br>
<%= submit_tag("更新") %>
<% end %>
<br>
